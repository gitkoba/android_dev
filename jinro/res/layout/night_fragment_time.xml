<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/night_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Night TIme"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/night_time_end_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/night_time_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="finished\nnight time" />

    <ListView
        android:id="@+id/night_time_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/night_time_list_title"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" >
    </ListView>

    <TextView
        android:id="@+id/night_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/night_time_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="00:00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/night_time_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/night_time_end_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="夜の行動先一覧" />

</RelativeLayout>